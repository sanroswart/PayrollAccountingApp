@model PayrollAccountingApp.Models.Employee
@{
    ViewData["Title"] = "Nuevo Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Nuevo empleado</h3>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Cedula" class="form-label"></label>
        <input asp-for="Cedula" class="form-control" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Departamento" class="form-label"></label>
        <input asp-for="Departamento" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Puesto" class="form-label"></label>
        <input asp-for="Puesto" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SalarioMensual" class="form-label"></label>
        <input asp-for="SalarioMensual" class="form-control" />
        <span asp-validation-for="SalarioMensual" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NominaId" class="form-label"></label>
        <input asp-for="NominaId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
